@model IEnumerable<ProductoViewModel>
@{
    ViewData["Title"] = "Productos index";
}

<div class="container mt-4">
    <div class="row mb-2">
        <div class="col text-end">
            <a asp-action="Crear" asp-controller="Producto" class="btn btn-success btn-lg">
                <i class="fa fa-plus me-2"></i>Agregar nuevo producto
            </a>
        </div>
    </div>
    <div class="card shadow rounded">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Lista de productos</h4>
        </div>
        <div class="table">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered align-middle text-center" id="tblCountry">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Nombre</th>
                                <th>Descripcion</th>
                                <th>Precio</th>
                                <th>Stock</th>
                                <th>Marca</th>
                                <th>Categiria</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => item.Id)</td>
                                    <td>@Html.DisplayFor(m => item.Nombre)</td>
                                    <td>@Html.DisplayFor(m => item.Descripcion)</td>
                                    <td>@Html.DisplayFor(m => item.Precio)</td>
                                    <td>@Html.DisplayFor(m => item.Stock)</td>
                                    <td>@Html.DisplayFor(m => item.Marca)</td>
                                    <td>@Html.DisplayFor(m => item.CategoriaId)</td>
                                    <td>
                                        <a class="btn btn-sm btn-warning me-1" asp-action="Editar" asp-route-id="@item.Id">
                                            <i class="fa fa-pencil"></i> Editar
                                        </a>
                                        <a class="btn btn-sm btn-info text-white me-1" asp-action="Detalles" asp-route-id="@item.Id">
                                            <i class="fa fa-info-circle"></i> Detalles
                                        </a>
                                        <a class="btn btn-sm btn-danger" asp-action="Borrar" asp-route-id="@item.Id">
                                            <i class="fa fa-trash"></i> Borrar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center" role="alert">
                    No hay registros disponibles.
                </div>
            }
        </div>
    </div>
</div>