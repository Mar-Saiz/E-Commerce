@model SaveProductosViewModel
@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fa fa-flag me-2"></i>Agregar Producto</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Crear" method="post">
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre del producto" />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">Descripcion</label>
                            <input asp-for="Descripcion" class="form-control" placeholder="" />
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Precio" class="form-label">Precio</label>
                            <input asp-for="Precio" class="form-control" placeholder="Ingresa el precio del producto" />
                            <span asp-validation-for="Precio" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Stock" class="form-label">Stock</label>
                            <input asp-for="Stock" class="form-control" placeholder="Ingresa el Stock del producto" />
                            <span asp-validation-for="Stock" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Marca" class="form-label">Marca</label>
                            <input asp-for="Marca" class="form-control" placeholder="Ingresa el Marca del producto" />
                            <span asp-validation-for="Marca" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoriaId" class="form-label">Macroindicador</label>
                            <select asp-for="CategoriaId" class="form-select">
                                <option value="0">Elige una Categoria</option>
                                @if (ViewBag.Categoria != null)
                                {
                                    foreach (var categoria in ViewBag.Categoria)
                                    {
                                        <option value="@categoria.Id">@categoria.Nombre</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="CategoriaId" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-3">
                            <a asp-controller="Producto" asp-action="Index" class="btn btn-secondary">
                                <i class="fa fa-arrow-left me-1"></i>Volver Atras
                            </a>

                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-plus me-1"></i>Agregar producto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
