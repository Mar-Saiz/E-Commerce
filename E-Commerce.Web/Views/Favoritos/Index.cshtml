@model IEnumerable<ProductoViewModel>

@{
    ViewData["Title"] = "Productos Favoritos";
}

<div class="container mt-4">
    <div class="card shadow rounded">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Lista de productos favoritos</h4>
        </div>
        <div class="table">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered align-middle text-center" id="tblCountry">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Nombre</th>
                                <th>Descripcion</th>
                                <th>Precio</th>
                                <th>Stock</th>
                                <th>Marca</th>
                                <th>Categoria</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => item.Id)</td>
                                    <td>@Html.DisplayFor(m => item.Nombre)</td>
                                    <td>@Html.DisplayFor(m => item.Descripcion)</td>
                                    <td>@Html.DisplayFor(m => item.Precio)</td>
                                    <td>@Html.DisplayFor(m => item.Stock)</td>
                                    <td>@Html.DisplayFor(m => item.Marca)</td>
                                    <td>@Html.DisplayFor(m => item.CategoriaId)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center" role="alert">
                    No hay registros disponibles.
                </div>
            }
        </div>
    </div>
</div>